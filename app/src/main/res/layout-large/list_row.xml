<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:minHeight="350dp"
    android:orientation="vertical"
    android:padding="3dp"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:weightSum="150" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvCtrlBuildingNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="30"
                android:background="#f5f5f5"
                android:gravity="center"
                android:text="25A"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="90"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="Düğmeciler Mah. Yusuf Efendi Çiftlik Çıkmazı No : 12"
                android:textColor="#000000"
                android:textSize="19dp" />

            <Button
                android:id="@+id/btnCtrlSave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="30"
                android:background="@drawable/_btn_kirmizi_mavi"
                android:text="KAYDET"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:orientation="vertical"
        android:weightSum="200" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:background="#c5c5c5"
            android:weightSum="150" >

            <TextView
                android:id="@+id/tv_item_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="40"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="55"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="ESKİ"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="55"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="YENİ"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:background="#f5f5f5"
            android:weightSum="150" >

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Yapı Tipi         :"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCtrlBuildingType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="55"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="-"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnCtrlBuildingType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="55"
                android:background="@drawable/_btn_mavi_kirmizi"
                android:gravity="center"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:weightSum="150" >

            <TextView
                android:id="@+id/TextView09"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Kat Sayısı       :"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCtrlFloorCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="55"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="-"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnCtrlFloorCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="55"
                android:background="@drawable/_btn_mavi_kirmizi"
                android:gravity="center"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:background="#f5f5f5"
            android:weightSum="150" >

            <TextView
                android:id="@+id/TextView11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="40"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Bğmsz Sayısı :"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCtrlIndependentSectionCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="55"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="-"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnCtrlIndependentCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding"
                android:layout_weight="55"
                android:background="@drawable/_btn_mavi_kirmizi"
                android:gravity="center"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>